#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
    //variáveis referentes a coleta e processamento
    float peso_mat_coletado[4],valor_mat_coletado,peso_mat_processamento,cap_processamento=10;

    //variáveis referentes ao estoque
    float peso_mat_estoque, valor_mat_estoque,mat_saida_estoque,cap_estoque=10;

    //variáveis referentes a reciclagem
    float peso_mat_reciclado,peso_mat_espera,valor_mat_reciclado;

    //variáveis referentes ao armazém
    float peso_mat_armazem,valor_mat_armazem,cap_armazem=10;

    //variáveis referentes ao descarte
    float peso_mat_descarte,valor_mat_descarte,cap_descarte=10;

    //variáveis referentes ao lucro e despesas
    float peso_mat_venda,valor_mat_venda,funcionarios,transporte,manutencao,lucro_reciclagem;

 int i, modalidade;

 char mes_maior_rendimento,dia_maior_rendimento,local_processamento,local_armazem,local_estoque,local_descarte,local_retirada;

    setlocale(LC_ALL,"");
    system("color 20");

    printf("\n=======================================\n");
    printf("\n\tUSINA DE RECICLAGEM DE LIXO\n");
    printf("\n=======================================\n");

    printf("Informe o procedimento a ser executado: ");
    printf("\n1 - Coleta e Processamento\n");
    printf("2 - Venda\n");
    printf("0 - Fechar o programa\n");
    scanf("%d", &modalidade);

    if(modalidade==1)
    {
        printf("\n=======================================\n");
        printf("\n\tCOLETA E PROCESSAMENTO\n");
        printf("\n=======================================\n");

        //Informa o material coletado de cada área
        for(i=0;i<5;i++)
        {
            printf("Informe o peso do material coletado: ");
            scanf("%f", &peso_mat_coletado[i]);
        }

        if(peso_mat_processamento<cap_processamento)
        {
            printf("O material poderá ser todo processado\n");
            printf("Informe o peso do material passível de reciclagem: ");
            scanf("%f", &peso_mat_reciclado);

            peso_mat_descarte=peso_mat_processamento-peso_mat_reciclado;
            cap_descarte=cap_descarte+peso_mat_descarte;

            peso_mat_espera=peso_mat_espera+peso_mat_reciclado;
        }

        if(peso_mat_processamento>cap_processamento)
        {
            printf("O material terá que ser destinado ao estoque\n");
        }

    }

    if(modalidade==2)
    {
        printf("\n=======================================\n");
        printf("\n\tVENDA\n");
        printf("\n=======================================\n");
    }

    else if(modalidade==0)
    {
        printf("Fechando o programa\n");
    }

    return 0;
}

